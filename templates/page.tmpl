<!DOCTYPE html>
<html lang="en" data-theme="dark">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{{ title }}</title>
    <meta name="description" content="{{ description }}" />
    <link rel="shortcut icon" href="/favicon.ico" />
    <link rel="canonical" href="{{ canonical_url }}" />

    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/@picocss/pico@1/css/pico.min.css"
    />

    <!-- Lightbox -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/venobox@2.0.4/dist/venobox.min.css"
    />
    <script src="https://cdn.jsdelivr.net/npm/venobox@2.0.4/dist/venobox.min.js"></script>
    <!-- highlightks -->
    <link
      id="hljscss"
      rel="stylesheet"
      href="https://unpkg.com/@highlightjs/cdn-assets@11.7.0/styles/night-owl.min.css"
    />
    <script src="https://unpkg.com/@highlightjs/cdn-assets@11.7.0/highlight.min.js"></script>
    <!-- Custom style-->
    <link rel="stylesheet" href="/css/custom.css" />
  </head>
  <body>
    <!-- Header -->
    <header class="container">
      <hgroup>
        <h1>{{ title }}</h1>
        <h2>
          <input
            type="checkbox"
            id="switch_theme"
            name="switch"
            role="switch"
          />
          Â» {{ description }}
        </h2>
      </hgroup>
    </header>
    <!-- /Header -->

    <!-- Main -->
    <main class="container">
      {{ content }}
    </main>
    <!-- /Main -->

    <!-- Footer -->
    <footer class="container">
      <small>{{ footer }}</small> ðŸ‘ˆ ðŸ‘‰
      <small>Built with <a href="https://picocss.com">Pico</a></small>
    </footer>
    <!-- /Footer -->

    <!-- Theme switcher -->
    <script src="/js/theme-switcher.js"></script>
    <script>
      new VenoBox({
        selector: "div.lightbox div a, div.lightbox p a",
        spinner: "fold",
        numeration: true,
        share: true,
        maxWidth: "80%",
      });
      hljs.highlightAll();
    </script>
